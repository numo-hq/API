{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": [
      "src/types",
      "**/node_modules",
      "CHANGELOG.md",
      "dist",
      "tsconfig.json",
      "gql",
      "tsconfig.*.json",
      "generated.ts",
      "pnpm-lock.yaml"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": "off"
      }
    }
  }
}
